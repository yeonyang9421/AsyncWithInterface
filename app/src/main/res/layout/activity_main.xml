       tools:layout="@layout/fragment_timer"/>

    <TextView
        android:id="@+id/text_activity_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="24sp"
        />

</LinearLayout>